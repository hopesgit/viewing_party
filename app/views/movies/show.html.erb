
<h1><%= @movie[:original_title] %></h1>
<%= button_to "Create Viewing Party for Movie", events_new_path, method: :get, params: { api_id: @movie[:id], title: @movie[:original_title], runtime: @movie[:runtime] } %>
<br>

<section class="general-information">
    <h3>Info</h3>
    Rating: <%= @movie[:vote_average] %> <br>
    Run Time: <%= @movie[:runtime] %> <br>
    Genre(s): <% @movie[:genres].each do |genre| %>
      <%= genre[:name] %>
    <% end %>
</section>
<br>

<section class="summary">
  <h3>Summary</h3>
  <p id="movie-summary"><%= @movie[:overview] %></p>
</section>
<br>

<section class="cast">
  <h3>Cast</h3>
  <% @cast.each do |member| %>
    <li id="cast-member"><%= "#{member[:name]} as #{member[:character]}" %></li>
  <%  end  %>
</section>
<br>

<h3>If you liked this movie, you may like these</h3>
<% @similar.each do |movie| %>
  <section class="similar">
    <li class="similar-movie-link"><%= link_to movie[:title], "#{movie[:id]}" %></li>
  </section>
<% end %>
<br>

<section class="reviews">
  <h3>Reviews</h3>
  <% @reviews.each do |review| %>
    <h4>Author:</h4>
    <p class="review-author"><%= review[:author] %></p>
    <h4>Review:</h4>
    <p class="review-content"><%= review[:content] %></p>
    <br>
  <%  end  %>
</section>
