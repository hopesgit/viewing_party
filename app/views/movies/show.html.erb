
<h1><%= @movie[:original_title] %></h1>
<%= button_to "Create Viewing Party for Movie", '/viewing_party/new' %>
<br>

<section class="general-information">
    <h3>Info</h3>
    Rating: <%= @movie[:vote_average] %> <br>
    Run Time: <%= @movie[:runtime] %> <br>
    Genre(s): <% @movie[:genres].each do |genre| %>
      <%= genre[:name] %>
    <% end %>
</section>
<br>

<section class="summary">
  <h3>Summary</h3>
  <%= @movie[:overview] %>
</section>
<br>

<section class="cast">
  <h3>Cast</h3>
  <% @cast.each do |member| %>
    <li><%= "#{member[:name]} as #{member[:character]}" %></li>
  <%  end  %>
</section>
<br>

<section class="reviews">
  <h3>Reviews</h3>
  <% @reviews.each do |review| %>
    <h4>Author:</h4>
    <p><%= review[:author] %></p>
    <h4>Review:</h4>
    <p><%= review[:content] %></p>
    <br>
  <%  end  %>
</section>
